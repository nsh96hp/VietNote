<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F0F4C3"
    android:id="@+id/ll_note"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/lst_note_height"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_locked"
            android:gravity="center"
            android:layout_gravity="center"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/item_titleNote"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:textSize="18dp"

                android:textColor="#263238"
                android:textStyle="bold"
                android:text="Tittle Note"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/item_ContentNote"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:textColor="#263238"
                android:textStyle="italic"
                android:text="Ná»™i dung ...."/>

            <TextView
                android:id="@+id/item_date_time"
                android:layout_gravity="bottom"
                android:paddingRight="@dimen/main_padding_rcv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="#D50000"
                android:gravity="left"
                android:text="22/22/1996"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="@dimen/lst_note_height"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/lst_note_height"
                android:scaleType="fitXY"
                android:paddingRight="6dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:id="@+id/item_img_note">


            </ImageView>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FF9800"
        >
    </View>
</LinearLayout>