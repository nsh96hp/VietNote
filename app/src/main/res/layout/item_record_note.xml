<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_record_item"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp"
    android:layout_width="160dp"
    android:layout_height="56dp">
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_play_record1"
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:scaleType="fitCenter"
                android:src="@drawable/ic_play_circle_outline_black_24dp"
                android:text="@string/play_record"
                android:textColor="#fff"
                android:background="#FFE0B2"/>
            <ImageButton
                android:id="@+id/btn_pause_record1"
                android:layout_width="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_pause_circle_outline_black_24dp"
                android:layout_height="30dp"
                android:text="@string/pause_record"
                android:textColor="#fff"
                android:background="#FFE0B2"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_temp1"
            android:background="#827717"
            android:gravity="center"
            android:text="Time: 0s"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </LinearLayout>
</android.support.v7.widget.CardView>